# ==============================================
# TESTheb Backend - Variables de Entorno
# ==============================================
# Copia este archivo como .env y completa con tus valores reales
# NO SUBIR .env al repositorio (ya está en .gitignore)

# ==============================================
# SERVIDOR
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# BASE DE DATOS - PostgreSQL
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testheb_db
DB_USER=tu_usuario_postgres
DB_PASSWORD=tu_password_postgres

# ==============================================
# JWT - Autenticación
# ==============================================
# Genera secretos seguros con: node -e "//console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_minimo_32_caracteres
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu_refresh_secret_diferente_al_jwt_secret
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# CLOUDINARY - Gestión de Imágenes
# ==============================================
# Obtener credenciales en: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ==============================================
# EMAIL - Nodemailer
# ==============================================
# Configuración para Gmail (requiere contraseña de aplicación)
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_aplicacion_16_caracteres
EMAIL_FROM_NAME=TESTheb

# Configuración alternativa para SMTP personalizado
# EMAIL_SERVICE=
# EMAIL_HOST=smtp.tuservidor.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# ==============================================
# FRONTEND URL - Para emails y CORS
# ==============================================
# Desarrollo local
FRONTEND_URL=http://localhost:5173

# Producción (cambiar según despliegue)
# FRONTEND_URL=https://testheb.vercel.app

# Desarrollo con ngrok (para testing desde móvil)
# FRONTEND_URL=https://tu-subdominio.ngrok-free.dev

# ==============================================
# TRANSBANK - WebPay Plus
# ==============================================
# Modo: TEST o LIVE
TRANSBANK_INTEGRATION_TYPE=TEST

# Credenciales de sandbox (TEST)
TRANSBANK_COMMERCE_CODE=597055555532
TRANSBANK_API_KEY_ID=tu_api_key_id_de_sandbox
TRANSBANK_API_KEY_SECRET=tu_api_key_secret_de_sandbox

# Credenciales de producción (LIVE) - Solo para deploy
# TRANSBANK_COMMERCE_CODE=tu_commerce_code_real
# TRANSBANK_API_KEY_ID=tu_api_key_id_real
# TRANSBANK_API_KEY_SECRET=tu_api_key_secret_real

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
# Niveles: error, warn, info, http, verbose, debug, silly

# ==============================================
# SEGURIDAD (Opcional)
# ==============================================
# Limitar requests por IP (rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins permitidos (separados por coma)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==============================================
# OTROS (Opcional)
# ==============================================
# Tamaño máximo de archivos subidos (en MB)
MAX_FILE_SIZE_MB=10

# Tiempo de expiración de sesión (en ms)
SESSION_TIMEOUT_MS=3600000
